<center><h1>OurPlanet&trade;</h1>
  <%= "#{current_member.full_name}" %>

  <% if current_member %>
    <a href = "/logout">Log me out!</a>
  <% end %>

  <a href = "/user/<%= current_member.id %>/friends">View your friends</a>
  <a href = "/user/<%= current_member.id %>/othermembers">View other members</a>

  <form action="/posts" method="POST">
    <input type="text" name="post[title]">
    <textarea name="post[text]" value="What are you thinking?" cols="30" rows="10"></textarea>
    <input type="submit">
  </form>

  <% unless @posts.empty? %>
    <ul>
      <% @posts.each do |post| %>
        <li>
          <h3><%= post.title %></h3>
          <p><%= post.text %></p>
        </li>
      <% end %>
    </ul>
  <% end %>
</center>
