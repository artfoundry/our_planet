<% if @post %>
<p>Are you sure you want to delete this post: <em>"<%= @post.text %>"</em>?</p>
<form action="/<%= @post.id %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <input type="submit" value="Sure I'm sure.">
  <input type="button" onclick="history.back(-1)" value="Jk jk">
</form>
<% else %>
<p>Sorry, post not found.</p>
<% end %>
