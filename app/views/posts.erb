
<form action="/posts" method="POST">
  <input type="text" name="post[title]">
  <textarea name="post[text]" value="What are you thinking?" cols="30" rows="10"></textarea>
  <input type="submit">
</form>

<% unless @posts.empty? %>
  <ul>
    <% @posts.each do |post| %>
      <li>
        <h3><%= post.title %></h3>
        <p><%= post.text %></p>
      </li>
    <% end %>
  </ul>
<% end %>
